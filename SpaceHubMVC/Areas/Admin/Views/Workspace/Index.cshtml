@model List<Workspace>
@{
    ViewData["Title"] = "Cubicle";
}

<div class="container">
<div class="row pt-4 pb-3">

    <div class="col-6">
        <h3 class="text-pr imary">Workspace List</h3>
    </div>
    <div class="col-6 text-end">

            <a asp-controller="Workspace" asp-action="Create" class="btn btn-primary">  <i class="bi bi-plus-circle pe-1"></i>Create New Workspace</a>

    </div>
</div>


<table class="table table-bordered table-striped">
    <tr>
        <th>Worspace ID</th>
        <th>Building</th>
        <th>Module</th>
        <th>SeatNo</th>
        <th>Functions</th>
        
        

    </tr>
   

    @foreach(var obj in Model.OrderBy(u=>u.Id))
    {
        <tr>
            <td>@obj.Id</td>
            <td>@obj.Building</td>
            <td>@obj.Module</td>
            <td>@obj.SeatNo</td>

            <td>
                <div class="w-10 btn-group"role="group">
                        <a asp-controller="Workspace" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square pe-1"></i>Edit
                        </a>
                        <a asp-controller="Workspace" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3 pe-1"></i>Delete
                        </a>
                </div>
            
            </td>
        </tr>
        
    }
    

</table>

</div>