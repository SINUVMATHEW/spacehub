@model List<User>
@{
    ViewData["Title"] = "User";
}
<div class="container">
    <div class="row pt-4 pb-3">

        <div class="col-6">
            <h3 class="text-pr imary">User List</h3>
        </div>
        <div class="col-6 text-end">

            <a asp-controller="User" asp-action="Create" class="btn btn-primary">  <i class="bi bi-plus-circle pe-1"></i>Create New User</a>

        </div>
    </div>


    <table class="table table-bordered table-striped">
        <tr>
            <th>User ID</th>
            <th>Name</th>
            <th>Email Id</th>
            <th>Functions</th>
        </tr>

        @foreach (var obj in Model.OrderBy(u => u.Id))
        {
            <tr>
                <td>@obj.Id</td>
                <td>@obj.Name</td>
                <td>@obj.Email</td>
                <td>
                    <div class="w-10 btn-group" role="group">
                        <a asp-controller="User" asp-action="Edit" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square pe-1 "></i>Edit
                        </a>
                        <a asp-controller="User" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3 pe-1"></i>Delete
                        </a>
                    </div>

                </td>
            </tr>

        }


    </table>

</div>