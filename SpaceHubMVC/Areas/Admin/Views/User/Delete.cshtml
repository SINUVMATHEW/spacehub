@model User
@{
    ViewData["title"] = "Delete User";
}

<form method="post" class="pt-2 ">
    <div class="border p-3 mt-4">
        <div class="row pb-1">
            <h4 class="text-primary ">Delete User</h4>
            <hr />
        </div>
        <div class="mb-1 row p-1">
            <label asp-for="Id"></label>
            <input asp-for="Id" disabled class="form-control p-1" />

        </div>
        <div class="mb-1 row p-1">
            <label asp-for="Name"></label>
            <input asp-for="Name" disabled class="form-control p-1" />

        </div>
        <div class="mb-1 row p-1">
            <label asp-for="Email"></label>
            <input asp-for="Email" disabled class="form-control p-1" />

        </div>

        <div class="row mt-3">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-danger form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="User" asp-action="Index" class="btn btn-secondary border form-control">Back to List</a>

            </div>
        </div>


    </div>
</form>
